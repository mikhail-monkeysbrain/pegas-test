.footer
  width 100%
  box-shadow inset 0px 1px 0px $grey
  padding 24px 0

  &__top
    display flex
    justify-content space-between
    align-items center
    padding-bottom 24px

  &__bottom
    border-top: 1px solid #D3D3D3
    .container
      display flex
      flex-wrap: wrap
      justify-content space-between
      align-items center
      padding-top 24px

  &__phones
    display flex
